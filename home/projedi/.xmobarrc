Config { font = "xft:Anonymous Pro-8:antialias=false"
       , bgColor = "#151515"
       , fgColor = "#888888"
       , border = NoBorder
       , position = Bottom
       , commands = [ Run StdinReader
                    , Run Battery [ "-t", "<acstatus> <left>"
                                  , "-L", "10", "-H", "95"
                                  , "-l", "#902020", "-h", "#437019"
                                  , "-S", "True"
                                  , "--", "-f", "ADP1/online"
                                  , "-O", "AC"
                                  , "-o", "<fc=#902020>BAT</fc>"
                                  ] 300
                    , Run Com "mpc" [ "current" ] "mpd" 200
                    , Run Com "volume" [] "volume" 300
                    , Run Kbd [ ("us", "<fc=#8197bf>US</fc>")
                              , ("ru", "<fc=#902020>RU</fc>")
                              ]
                    , Run Date "%a%d <fc=#8197bf>%H:%M</fc>" "date" 300
                    ]
       , sepChar = "%"
       , alignSep = "}{"
       , template = "%StdinReader% }{ |%mpd%|%volume%|%battery%|%date%|%kbd%"
       }
