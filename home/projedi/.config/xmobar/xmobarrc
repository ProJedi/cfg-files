Config { font = "xft:Anonymous Pro-8:antialias=false"
       , bgColor = "#151515"
       , fgColor = "#888888"
       , border = NoBorder
       , position = Bottom
       , hideOnStart = False
       , commands = [ Run StdinReader
                    , Run Battery [ "-t", "<acstatus> <left>"
                                  , "-L", "10", "-H", "95"
                                  , "-l", "#cf6a4c", "-h", "#70b950"
                                  , "-S", "True"
                                  , "--", "-f", "ADP1/online"
                                  , "-O", "AC"
                                  , "-o", "<fc=#cf6a4c>BAT</fc>"
                                  ] 100
                    , Run Com "mpc" [ "current" ] "mpd" 200
                    , Run Com "volume" [] "volume" 300
                    , Run Kbd [ ("us", "<fc=#8fbfdc>US</fc>")
                              , ("ru", "<fc=#cf6a4c>RU</fc>")
                              ]
                    , Run Date "%a%d <fc=#8fbfdc>%H:%M</fc>" "date" 100
                    ]
       , sepChar = "%"
       , alignSep = "}{"
       , template = "%StdinReader% }{ |%mpd%|%volume%|%battery%|%date%|%kbd%"
       }
